<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntSurvey.HomePage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="AppBackgroundColor">#93f3f5</Color>
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{StaticResource AppBackgroundColor}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>
        <StackLayout x:Name="stackLayout">
            <Label Text="Chestionare" FontFamily="Roboto"  FontSize="48" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,40,0,30" FontAttributes="Bold"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
